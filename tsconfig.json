{
	"compilerOptions": {
		"moduleResolution": "Node",
		"target": "ES2019",
		"rootDir": "src",
		"esModuleInterop": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"plugins": [ {	
			"transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
			"after": true,
		}]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}